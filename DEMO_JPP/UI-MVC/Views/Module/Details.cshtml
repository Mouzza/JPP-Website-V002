@model JPP.Domain.Dossiermodule

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Dossiermodule: @Model.naam</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Admin naam:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdminNaam)
        </dd>

        <dt>
            Module naam:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.naam)
        </dd>

        <dt>
            Begin datum:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.beginDatum)
        </dd>

        <dt>
            Eind datum:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.eindDatum)
        </dd>

        <dt>
            Volledigheids %:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.volledigheidsPercentage)
        </dd>
       </br>
        <dt>
            Status:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.status)
        </dd>

        <dt>
            Thema:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.thema.inhoud)
        </dd>

        <dt>
            Central vraag:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.centraleVraag.inhoud)
        </dd>
        <br />
        <dt>
            Beloning naam:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.beloning.naam)
        </dd>

        <dt>
            Beloning beschrijving:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.beloning.beschrijving)
        </dd>
        <br />
        <dt>
            Aantal winnaars:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.centraleVraag.aantalWinAntwoorden)
        </dd>
        <dt>
            Aantal antwoorden:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dossierAntwoorden.Count)
        </dd>

    </dl>
</div>
<p>
    
    @Html.ActionLink("Ga terug", "Index")
    <h4>@Html.ActionLink("Beheer de antwoorden("+@Model.dossierAntwoorden.Count +")", "Lijst", "Antwoord", new { id = @Model.id }, null)</h4>
</p>
