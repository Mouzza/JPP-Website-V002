@model JPP.UI.Web.MVC.Models.UserRoleViewModel
 @{var tekstRollen = "";}

<h2>Profiel</h2>

<div>
    <h4>Gegevens</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naam:
        </dt>

        <dd>
            @Model.user.UserName 
 
        </dd>
        <dt>
            Gsm-nummer:
        </dt>
        <dd>
            @if (Model.user.PhoneNumber == null)
            {
                Model.user.PhoneNumber = "Geen";
            }
            
            @Html.DisplayFor(model => Model.user.PhoneNumber)

        </dd>
        <dt>
            Email:
        </dt>

        <dd>
            @Model.user.Email
        </dd>

        <dt>
            Roles:
        </dt>
        <dd>
            @{var laatsteRol = Model.roles.Last(); tekstRollen = "";}
            @foreach (var role in Model.roles)
            {
                if (role.Equals(laatsteRol))
                {

                    tekstRollen = tekstRollen + role.Name;
                }
                else
                {
                    tekstRollen = tekstRollen + role.Name + ", ";

                }

            }

            @tekstRollen

        </dd>
        <dt>
            Lid sinds:
        </dt>

        <dd>
            @Model.user.Created
        </dd>
    </dl>
</div>
<p>
   @Html.ActionLink("Wijzigen", "AccountInstellingen") |
    @Html.ActionLink("Ga terug", "Index")
</p>

